{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <p><a href="{{ path('blog_show', {'id': id}) }}">ID {{ id }}</a></p>
    <h3>{{ post.title | upper }}</h3>
    <p>{{ post.text }}</p>
    <p>{{ post.date | date('H:i:s') }}</p>
    {{ 560 | price }}
    <p>Here is the current locale {{ locale }}</p>
    <p>{{ message }}</p>

    <p>Env: {{ app.environment }}</p>
    <p>User: {{ app.user }}</p>
    <p>Session started: {{ app.session.isStarted() }}</p>
    <p>Request: {{ app.request }}</p>
    <p>Debug: {{ app.debug }}</p>

{% endblock %}